{% if pageTitle %}
    {% set title = pageTitle ~ ' | Beanstalkd Admin' %}
{% endif %}

<!DOCTYPE html>
<html lang="en" ng-app="beanstalkdAdmin">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>{{ title }}</title>
    <meta name="description" content="Beanstalkd administration and monitoring interface">

    <link rel="stylesheet" href="{{ asset_url('/vendor/css/bootstrap.min.css') }}">
    <link rel="stylesheet" href="{{ asset_url('/app/assets/css/style.css') }}">
</head>
<body>
<nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#">Beanstalkd Admin</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
                <li class="active"><a href="/">Home</a></li>
                <li><a href="/about">About</a></li>
            </ul>
        </div>
    </div>
</nav>


{% block content %}{% endblock %}

<script src="{{ asset_url('/vendor/js/jquery.min.js') }}"></script>
<script src="{{ asset_url('/vendor/js/bootstrap.min.js') }}"></script>
<script src="{{ asset_url('/vendor/js/angular.min.js') }}"></script>
<script src="{{ asset_url('/vendor/js/angular-resource.min.js') }}"></script>
<script src="{{ asset_url('/app/assets/js/app.js') }}"></script>

</body>
</html>
